<h1 class="text-center">Cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card logo">
          <div class="card-category"><%= c.name %></div>
          <%= link_to '', cocktail_path(c), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
